;;; Node "User Agents"

(defun string-item (s) `(li ,s))

(define-template user-agents
`(
  (h1 "User Agents")
  (ul ,@(map string-item ALLOWED-AGENTS))
  ,@(if (length> BLOCKED-AGENTS 0)
        `((h2 "Blockiert")
          (ul ,@(map string-item BLOCKED-AGENTS))))
  (a (@ (href "?plain")) "plain")
 )
)